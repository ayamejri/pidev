{% extends 'back.html.twig' %}


{% block title %}
participant index
{% endblock %}

{% block body %}
    <h1>participant index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>dateParticipation</th>
                <th>Nom Evenement</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for participant in participants %}
            <tr>
                <td>{{ participant.id }}</td>
                <td>{{ participant.description }}</td>
                <td>{{ participant.dateParticipation ? participant.dateParticipation|date('Y-m-d') : '' }}</td>
                <td>{{ participant.Evenement }}</td>
                <td>
                    <a href="{{ path('app_participant_show', {'id': participant.id}) }}">show</a>
                    <a href="{{ path('app_participant_edit', {'id': participant.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
