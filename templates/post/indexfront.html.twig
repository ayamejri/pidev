{% extends 'base.html.twig' %}

{% block title %}Post index{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Latest Posts</h1>

        <div class="row">
            {% for post in posts %}
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title">{{ post.title }}</h5>
                        <p class="card-text">{{ post.description }}</p>
                        <p class="card-text">Thread: {{ post.thread.title }}</p>
                        <p class="card-text">Thread: {{ post.thread.author }}</p>
                        <a href="{{ path('app_post_showf', {'id': post.id}) }}" class="btn btn-primary">Read More</a>
                    </div>
                </div>
            {% endfor %}
        </div>

        <a href="{{ path('app_post_newf') }}" class="btn btn-success">Create New Post</a>
       


    </div>
{% endblock %}
