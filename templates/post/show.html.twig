{% extends 'backend.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
    <h1>Post</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ post.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ post.description }}</td>
            </tr>
            <tr>
                <th>CreatedAT</th>
                <td>{{ post.createdAT ? post.createdAT|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ post.author }}</td>
            </tr>
            <tr>
                <th>Thread</th>
                <td>{{ post.thread.title }}</td>
            </tr>
            <!-- GitHub Star Button -->
        <a class="github-button" href="https://github.com/ayamejri/pidev" data-icon="octicon-star" data-size="large" data-show-count="true" aria-label="Star ayamejri/pidev on GitHub">Star</a>
        <script async defer src="https://buttons.github.io/buttons.js"></script>
        </tbody>
    </table>

    <a href="{{ path('app_post_index') }}">back to list</a>

    <a href="{{ path('app_post_edit', {'id': post.id}) }}">edit</a>

    {{ include('post/_delete_form.html.twig') }}
{% endblock %}
