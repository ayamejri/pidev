{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Post: {{ post.title }}</h1>

        <div class="card mb-4">
            <div class="card-body">
                <h5 class="card-title">Post Information</h5>
                <ul class="list-group">
                    <li class="list-group-item"><strong>Title:</strong> {{ post.title }}</li>
                    <li class="list-group-item"><strong>Description:</strong> {{ post.description }}</li>
                    <li class="list-group-item"><strong>Created At:</strong> {{ post.createdAT ? post.createdAT|date('Y-m-d H:i:s') : '' }}</li>
                    <li class="list-group-item"><strong>Author:</strong> {{ post.author }}</li>
                    <li class="list-group-item"><strong>Thread:</strong> {{ post.thread.title }}</li>
                </ul>
            </div>
        </div>

        <a href="{{ path('app_post_indexf') }}" class="btn btn-primary">Back to List</a>
        <a href="{{ path('app_post_editf', {'id': post.id}) }}" class="btn btn-secondary">Edit</a>
        
        <!-- GitHub Star Button -->
        <a class="github-button" href="https://github.com/ayamejri/pidev" data-icon="octicon-star" data-size="large" data-show-count="true" aria-label="Star ayamejri/pidev on GitHub">Star</a>
        <script async defer src="https://buttons.github.io/buttons.js"></script>
        
        {# -------------------------- Share ------------------------------------  #}
        <div class="sharethis-inline-share-buttons"></div>
        {# -------------------------- Share ------------------------------------  #}    
        <script type="text/javascript" src="https://platform-api.sharethis.com/js/sharethis.js#property=64065d7b567fbf001a2d5d17&product=inline-share-buttons&source=platform" async="async"></script>

    </div>
{% endblock %}
