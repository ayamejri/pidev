{% extends 'front.html.twig' %}
{% block body %}


    <div class="service">
        <div class="container">
            <div class="section-header text-center">
              <div id="google_translate_element"></div>

                <h4 style="margin-top:50px; margin-bottom:50px;">Liste des produits</h4>
            </div>
            <div class="row">
           {% for produit in produits %}
        <div class="col-lg-4 col-md-6 mb-4">
        <div class="service-item">
          <img src="{{ asset('uploads/' ~produit.ressource)}}" style=" width:360px; height:250px; " alt="">
          <p><strong style="color:#696969" >Description:</strong> {{ produit.Description }}</p>
          <p><strong style="color:#696969" >Prix:</strong> {{ produit.Prix }}</p>
         <br>
         <br>

        </div>
      </div>
      {% else %}
      <div class="col">
        <p class="text-center">Aucun produit trouv√©.</p>
      </div>

                {% endfor %}

            </div>

        </div>
    </div>
    <br>
    
{% endblock %}