{% extends 'back.html.twig' %}


{% block title %}
Publicite index
{% endblock %}

{% block body %}
    <h1>Publicite index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>Type</th>
                <th>Sponsor</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for publicite in publicites %}
            <tr>
                <td>{{ publicite.id }}</td>
                <td>{{ publicite.description }}</td>
                <td>{{ publicite.type }}</td>
                <td>{{ publicite.sponsor }}</td>
                <td>
                    <a href="{{ path('app_publicite_show', {'id': publicite.id}) }}">show</a>
                    <a href="{{ path('app_publicite_edit', {'id': publicite.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_publicite_new') }}">Create new</a>
{% endblock %}
