{% extends 'backend.html.twig' %}
{% block reclamation %}
    <h1>Réclamations Ajoutées</h1>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
	<script>
		$(document).ready(function () {
$("#myInput").on("keyup", function () {
var value = $(this).val().toLowerCase();
$("#myTable tr").filter(function () {
$(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
});
})
});
	</script>
    {% if reclamations is not empty %}
    <input type="search" id="myInput" class="form-control pl-6" placeholder="Search reponse"/>
        <table  class="table" id ="mytable">
            <thead>
                <tr>
                    <th>TYPE</th>
                   
                    <th>Description</th>
                    <th>Supprimer</th> 
                    <th>ETAT</th>
                   
                </tr>
            </thead>
            <tbody>
                {% for reclamation in reclamations %}
                    <tr>
                        <td>{{ reclamation.type }}</td>
                       
                        <td>{{ reclamation.description }}</td>
                        <td>
                            <a href="{{ path('Reclamation_delete', {'id': reclamation.id}) }}" class="btn btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette réclamation ?')">Supprimer</a>
                        </td>
                         <td>
    {% if reclamation.etat == 0 %}
        Non répondu
    {% else %}
        Répondu
    {% endif %}
</td>
                        
                
<td>
    {% if reclamation.etat == 0 %}
        <a href="{{ path('add_Rep', {'id': reclamation.id}) }}" class="btn btn-primary">Répondre</a>
    {% elseif reclamation.etat == 1 %}
        {% if reclamation.reponse %}
           <button class="btn btn-primary" data-toggle="modal" data-target="#responseModal{{ reclamation.id }}">afficher la reponse</button>
   
          <div class="modal fade" id="responseModal{{ reclamation.id }}" tabindex="-1" role="dialog" aria-labelledby="responseModalLabel{{ reclamation.id }}" aria-hidden="true">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="responseModalLabel{{ reclamation.id }}">Response</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  {{ reclamation.reponse.description }}
                </div>
              </div>
              <div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
    <a href="{{ path('rep_edit', {'id': reclamation.reponse.id}) }}" class="btn btn-danger">modifier</a>
</div>

            </div>
          </div>
        {% else %}
            Aucune réponse
        {% endif %}
    {% endif %}
</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>Aucune réclamation ajoutée pour le moment.</p>
    {% endif %}
{% endblock %}