{% extends 'base.html.twig' %}

{% block title %}Thread index{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
    <style>
        .card {
            animation: fadeInUp 0.5s ease forwards;
            border: 1px solid #ccc;
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: box-shadow 0.3s ease;
        }

        .card:hover {
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Remove underline from anchor tag */
        .btn {
            text-decoration: none;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4 animate__animated animate__bounceIn">Threads</h1>

        <!-- Search and Sort Form -->
        <form action="{{ path('app_thread_indexf') }}" method="get" class="mb-4 animate__animated animate__fadeInUp">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="searchInput">Search by Keyword:</label>
                    <input type="text" name="keyword" id="searchInput" value="{{ app.request.query.get('keyword') }}" class="form-control">
                </div>
                <div class="form-group col-md-4">
                    <label for="sortBySelect">Sort by:</label>
                    <select name="sortBy" id="sortBySelect" class="form-control">
                        <option value="">Select</option>
                        <option value="createdAtDescending" {% if app.request.query.get('sortBy') == 'createdAtDescending' %}selected{% endif %}>Created At (Descending)</option>
                    </select>
                </div>
                <div class="form-group col-md-2">
                    <button type="submit" class="btn btn-primary" style="margin-top: 32px;">Search and Sort</button>
                </div>
            </div>
        </form>

        <!-- Thread Cards -->
        <div class="row">
            {% for thread in threads %}
                <div class="col-md-6 mb-4 animate__animated animate__fadeInUp">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">{{ thread.title }}</h5>
                            <p class="card-text">Topic: {{ thread.topic }}</p>
                            <p class="card-text">Created At: {{ thread.createdat ? thread.createdat|date('Y-m-d H:i:s') : '' }}</p>
                            <p class="card-text">Author: {{ thread.author }}</p>
                            <div class="btn-group">
                                <button type="button" class="btn btn-success like-btn" data-post-id="{{ thread.id }}">Like</button>
                                <button type="button" class="btn btn-danger Dislike-btn" data-post-id="{{ thread.id }}">Dislike</button>
                                <span class="like-count">0</span> <!-- Placeholder for displaying like count -->
                            </div>
                            <a href="{{ path('app_thread_showf', {'id': thread.id}) }}" class="btn btn-success">Show</a>
                            <a href="{{ path('app_thread_editf', {'id': thread.id}) }}" class="btn btn-success">Edit</a>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12 animate__animated animate__fadeInUp">
                    <p>No threads found.</p>
                </div>
            {% endfor %}
        </div>

        <!-- Create New Thread Button -->
        <a href="{{ path('app_thread_newf') }}" class="btn btn-success mb-4 animate__animated animate__fadeInUp">Create New Thread</a>

        <!-- Button to go to posts -->
        <a href="{{ path('app_post_indexf') }}" class="btn btn-success mb-4 animate__animated animate__fadeInUp">Go to Posts</a>
    </div>

    <!-- JavaScript for handling like and dislike actions -->
    <!-- Your JavaScript code here -->
{% endblock %}
